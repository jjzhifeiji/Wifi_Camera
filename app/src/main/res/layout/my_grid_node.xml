<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minWidth="80.0dip"
    android:minHeight="96.0dip"
    android:orientation="vertical">

    <com.joyhonest.sports_camera.RoundRectLayout
        android:id="@+id/item_view"
        android:layout_width="80.0dip"
        android:layout_height="80.0dip"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/Grid_imageView1"
            android:layout_width="80.0dip"
            android:layout_height="80.0dip"
            android:scaleType="centerCrop"
            android:src="@mipmap/loading01" />

        <ImageView
            android:id="@+id/video_bg"
            android:layout_width="25.0dip"
            android:layout_height="25.0dip"
            android:layout_centerInParent="true"
            android:background="@mipmap/video_bg"
            android:scaleType="centerCrop"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="18.0dip"
            android:layout_height="18.0dip"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10.0dip"
            android:layout_marginRight="10.0dip"
            android:background="@mipmap/noselected_icon"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="1"
            android:textColor="#ffff0000"
            android:textSize="40.0dip"
            android:visibility="gone" />

        <TextView
            android:id="@+id/Grid_textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:text="New Text"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/filename_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:text="New Text"
            android:visibility="invisible" />
    </com.joyhonest.sports_camera.RoundRectLayout>

    <Space
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="0.5" />

    <ProgressBar
        android:id="@+id/Grid_progressBar1"
        style="?android:progressBarStyleHorizontal"
        android:layout_width="80.0dip"
        android:layout_height="8.0dip"
        android:layout_gravity="center"
        android:max="100"
        android:progressDrawable="@drawable/progressbar" />

    <Space
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0" />

    <Button
        android:id="@+id/btn_down"
        android:layout_width="44.0dip"
        android:layout_height="55.0dip"
        android:background="@mipmap/download_icon"
        android:visibility="gone" />
</LinearLayout>